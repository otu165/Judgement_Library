<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Judgement" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_color</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom AlertDialog -->
    <style name="Custom.Dialog.Alert" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/main_color</item>
        <item name="buttonBarNegativeButtonStyle">@style/NormalFontStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/NormalFontStyle</item>
        <item name="android:windowMinWidthMinor">@dimen/alert_dialog_width_minor</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:elevation">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WindowTitleStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
    </style>

</resources>