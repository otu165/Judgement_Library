<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeadFontStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="MiddleFontStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="NormalFontStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="NormalFontStyleWithBorder">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left</item>
        <item name="android:background">@drawable/edge</item>
    </style>

    <style name="TextPadding">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Margin">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabGravity">fill</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextColor">@color/gray</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/main_color</item>
        <item name="tabMinWidth">90dp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="errorEnabled">true</item>
    </style>

</resources>