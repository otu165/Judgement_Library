<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/TextPadding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/edge"
    android:weightSum="1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_home_news_title"
            tools:text="살인 피의자 구속"
            style="@style/MiddleFontStyle"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_home_news_description"
            tools:text="피의자 영장... 스토킹 정황 수사 경찰, \'큰딸 A씨 스토킹 피해\' 진술..."
            style="@style/NormalFontStyle"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- place holders -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:background="@color/light_gray"
        app:shimmer_dropoff="1"
        app:shimmer_auto_start="false"
        app:shimmer_duration="2000">

    </com.facebook.shimmer.ShimmerFrameLayout>

    <ImageView
        android:id="@+id/img_home_news"
        android:layout_gravity="center_horizontal"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:visibility="gone"/>

</LinearLayout>