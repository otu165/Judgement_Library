<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rv_scrap_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ToggleButton
        android:id="@+id/toggle_scrap_item_delete"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/scrap_delete_selector"
        android:textOn=""
        android:textOff=""
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:visibility="gone"/>

    <LinearLayout
        style="@style/TextPadding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_scrap_title"
            tools:text="믿을 수 없는 사건"
            style="@style/MiddleFontStyle"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/txt_scrap_description"
                tools:text="인천시의 한 아파트에서 싸늘한 주검 .."
                style="@style/NormalFontStyle"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_scrap_date"
                tools:text="21.01.19"
                style="@style/NormalFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>