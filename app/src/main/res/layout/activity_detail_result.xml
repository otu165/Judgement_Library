<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.example.judgement.view.detail_result.DetailResultActivity" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.detail_result.DetailResultActivity">

        <!-- top -->
        <LinearLayout
            android:id="@+id/detail_result_top"
            style="@style/TextPadding"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="2dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_detail_result_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

            <TextView
                android:id="@+id/txt_detail_result_keyword"
                style="@style/MiddleFontStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="center|start"
                tools:text="검색단어" />

        </LinearLayout>

        <!-- contents -->
       <androidx.core.widget.NestedScrollView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/TextPadding"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/detail_result_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_detail_result_title"
                    style="@style/HeadFontStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    tools:text="층간소음 이웃 폭행 혐의 부부 무죄 확정" />

                <ToggleButton
                    android:id="@+id/toggle_detail_result_scrap"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="@drawable/toggle_selector"
                    android:textOff=""
                    android:textOn="" />

            </LinearLayout>

            <!-- TODO replace it to rv -->
            <LinearLayout
                android:id="@+id/txt_detail_result_case"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/detail_result_title">
                <!--사건번호-->
                <TextView
                    android:id="@+id/txt_detail_result_case_title"
                    style="@style/MiddleFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사건" />

                <TextView
                    android:id="@+id/txt_detail_result_case_description"
                    style="@style/NormalFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    tools:text="2019도 16192 폭력행위등처벌에관한법률위반" />

                <!--판시사항-->
                <TextView
                    android:id="@+id/txt_detail_result_case_issue"
                    style="@style/MiddleFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="판시사항" />

                <TextView
                    android:id="@+id/txt_detail_result_case_issue_description"
                    style="@style/NormalFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    tools:text="자동차 양수인이 양도인으로부터 자동차를 인도받고서도 등록명의의 이전을 하지 않는 경우" />

                <!--판결요지-->
                <TextView
                    android:id="@+id/txt_detail_result_case_summary"
                    style="@style/MiddleFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="판결요지" />

                <TextView
                    android:id="@+id/txt_detail_result_case_summary_description"
                    style="@style/NormalFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    tools:text="양도인은 전전 양수인에 대하여 직접 양수인 명의로 소유권이전등록의 인수절차 이행을 구할 수 없다" />

                <!--재판장-->
                <TextView
                    android:id="@+id/txt_detail_result_case_judge"
                    style="@style/MiddleFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="재판장" />

                <TextView
                    android:id="@+id/txt_detail_result_case_judge_description"
                    style="@style/NormalFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    tools:text="대법관 이동원(재판장) 김재형(주심) 민유숙 노태악" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>